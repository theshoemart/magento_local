<config>
    <sections>
        <checkout>
            <groups>
                <giftwithpurchase translate="label">
                    <label>Gift With Purchase</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <is_active translate="label">
                            <label>Is Active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_active>
						<minimum_subtotal translate="label">
                            <label>Minimum Subtotal Amount</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>Gift logic will trigger in cart if the cart subtotal is greater or equal to this value. If left empty, will assume default value of 0.00</comment>
                        </minimum_subtotal>
						<product_id translate="label">
                            <label>Product ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_id>
                    </fields>
                </giftwithpurchase>
            </groups>
        </checkout>
    </sections>
</config>
