<!-- app/code/local/Harapartners/HpChannelAdvisor/etc/adminhtml.xml -->

<config>
	<layout>
		<updates>
			<harapartners_hpchanneladvisor>
				<file>harapartners/hpchanneladvisor.xml</file>
			</harapartners_hpchanneladvisor>
		</updates>
	</layout>
	<acl>
		<resources>
			<admin>
				<children>
					<system>
						<children>
							<config>
								<children>
									<hpchanneladvisor translate="title" module="hpchanneladvisor">
										<title>HP ChannelAdvisor</title>
									</hpchanneladvisor>
								</children>
							</config>
						</children>
					</system>
				</children>
			</admin>
		</resources>
	</acl>
</config>
