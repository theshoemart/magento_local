<?xml version="1.0"?>
<config>
    <modules>
       <Slap_Aim>
          <version>1.0.1</version>
       </Slap_Aim>
    </modules>
    <global>
        <models>
            <aim>
                <class>Slap_Aim_Model</class>
            </aim>
        </models>
        <resources>
            <aim_setup>
                <setup>
                    <module>Slap_Aim</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </aim_setup>
            <aim_write>
                <use>core_write</use>
            </aim_write>
            <aim_read>
                <use>core_read</use>
            </aim_read>
        </resources>
    </global>
    <default>
        <payment>
            <aim>
                 <active>0</active>
					<cctypes>AE,VI,MC,DI</cctypes>
					<cgi_url>https://secure.authorize.net/gateway/transact.dll</cgi_url>
					<debug>0</debug>
					<email_customer>0</email_customer>
					<login backend_model="adminhtml/system_config_backend_encrypted"/>
					<merchant_email/>
					<model>aim/paymentMethod</model>
					<order_status>processing</order_status>
					<payment_action>authorize</payment_action>
					<test>1</test>
					<title>SecureBuy (Aim)</title>
					<trans_key backend_model="adminhtml/system_config_backend_encrypted"/>
					<allowspecific>0</allowspecific>
					<currency>USD</currency>
					<partial_authorization_checksum_checking>1</partial_authorization_checksum_checking>
				</aim>
         </payment>
    </default>
</config>